<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        tools:ignore="MissingConstraints"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="5dp"
        android:layout_centerVertical="true"
        >

        <LinearLayout
            android:id="@+id/ll_bottom_tab1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_bottom_tab1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/img_bottom1"
                >
            </Button>

            <TextView
                android:id="@+id/txt_bottom_tab1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="홈"
                android:layout_marginTop="5dp"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_bottom_tab2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/img_bottom2"
                >
            </Button>

            <TextView
                android:id="@+id/txt_bottom_tab2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:layout_marginTop="5dp"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_bottom_tab3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/img_bottom3"
                >
            </Button>

            <TextView
                android:id="@+id/txt_bottom_tab3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="무료추천종목"
                android:layout_marginTop="5dp"
                android:textSize="10sp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_bottom_tab4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            >

            <Button
                android:id="@+id/btn_bottom_tab4"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/img_bottom4"
                >
            </Button>

            <TextView
                android:id="@+id/txt_bottom_tab4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="마이페이지"
                android:layout_marginTop="5dp"
                android:textSize="10sp"/>

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>