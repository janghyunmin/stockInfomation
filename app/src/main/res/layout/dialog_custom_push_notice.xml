<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/intro_login_btn_shape"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="450dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="20dp">
                    <TextView
                        android:id="@+id/txt_push_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="1111"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="10dp">

                        <TextView
                            android:id="@+id/txt_push_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11111"
                            android:textSize="12sp"
                            />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="10dp"
                            android:background="#e5e5e5"
                            android:layout_marginRight="10dp"
                            android:layout_marginLeft="10dp"/>

                        <TextView
                            android:id="@+id/txt_push_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="11111"
                            android:textSize="12sp"
                            />


                    </LinearLayout>

                    <com.osj.stockinfomation.util.HTMLTextView
                        android:id="@+id/txt_push_content"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="11111"
                        android:layout_marginTop="20dp"
                        />

                </LinearLayout>

            </ScrollView>

            <Button
                android:id="@+id/btn_push"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/img_dialog_red_bg"
                android:text="확인"

                android:textColor="#ffffff"/>

        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>