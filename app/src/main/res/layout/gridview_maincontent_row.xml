<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    
    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints"
        android:layout_marginRight="5dp">
        
        <ImageView
            android:id="@+id/iv_maincontent_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:layout_margin="2dp"
            android:adjustViewBounds="true">
            
        </ImageView>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/txt_maincontent_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textStyle="bold"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:textSize="10sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_maincontent_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="28dp"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_below="@+id/txt_maincontent_title"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:textSize="11sp">

                </TextView>

                <TextView
                    android:id="@+id/txt_maincontent_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:layout_below="@+id/txt_maincontent_subtitle"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="2dp"
                    android:textSize="10sp"
                    android:visibility="gone">

                </TextView>

            </RelativeLayout>

        </LinearLayout>
        
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>