<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/stock_name"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/black"
        android:textSize="13dp"
        tools:background="@color/cardview_shadow_start_color"

        />
    <TextView
        android:id="@+id/m_status"
        app:layout_constraintTop_toBottomOf="@+id/stock_name"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="8dp"
        android:padding="3dp"
        android:gravity="center"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text=""
        tools:background="@color/cardview_shadow_start_color"
        />

    <TextView
        android:id="@+id/buy_price_text"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/stock_name"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        tools:background="@color/cardview_shadow_start_color"
        />

    <TextView
        android:id="@+id/buy_price"
        android:layout_width="55dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        app:layout_constraintLeft_toLeftOf="@+id/buy_price_text"
        app:layout_constraintTop_toBottomOf="@+id/buy_price_text"
        tools:background="@color/cardview_shadow_start_color"

        />

    <TextView
        android:id="@+id/per_text"
        app:layout_constraintTop_toTopOf="@+id/buy_price_text"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"

        tools:background="@color/cardview_shadow_start_color"
        />

    <TextView
        android:id="@+id/per"
        app:layout_constraintTop_toBottomOf="@+id/per_text"
        app:layout_constraintLeft_toLeftOf="@+id/per_text"
        app:layout_constraintRight_toRightOf="@+id/per_text"
        android:layout_marginTop="3dp"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        tools:background="@color/cardview_shadow_start_color"
        />

    <TextView
        android:id="@+id/date_text"
        app:layout_constraintRight_toLeftOf="@+id/date"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="5dp"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        tools:background="@color/cardview_shadow_start_color"
        />

    <TextView
        android:id="@+id/date"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_width="60dp"
        android:layout_height="wrap_content"

        tools:background="@color/cardview_shadow_start_color"

        />




</androidx.constraintlayout.widget.ConstraintLayout>