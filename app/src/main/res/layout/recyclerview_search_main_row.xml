<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        android:layout_marginBottom="10dp"
        android:background="#ffffff"
        android:gravity="center_vertical"
        >

        <LinearLayout
            android:id="@+id/ll_search_main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/txt_maincontent_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLength="24"
                android:textStyle="bold"
                android:textSize="14sp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_view_count"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/txt_maincontent_view_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textSize="10sp"
                android:layout_marginRight="10dp"/>

            <ImageView
                android:id="@+id/iv_search_main_fav_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_fav_count"
                android:layout_marginRight="5dp"/>

            <TextView
                android:id="@+id/txt_maincontent_fav_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1111"
                android:textSize="10sp"
                android:layout_marginRight="15dp"/>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e5e5e5"
            android:layout_alignParentBottom="true"/>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>